@@ -139,6 +151,25 @@ public abstract class SignBlock extends BaseEntityBlock implements SimpleWaterlo
                 return InteractionResult.SUCCESS_SERVER;
             } else if (flag1) {
                 return InteractionResult.SUCCESS_SERVER;
